var currentItem = 0
var selectedItem = -1;
var appsList = new Array();
class mainChronvs {
  constructor(tela, utils) {
    this.tela = tela;
    this.appsModuleList;
    this.selectedItem = -1;
    this.currentItem = -1;
    this.appsList = new Array();
    this.utils = utils;

    this.utils.setMain(this);

    this.appsModuleList = require("Storage").list(/\apjs/);
    this.appsModuleList.forEach((appName, index) => {
      var app = new (require(appName))();
      this.appsList.push({appName, name: app.getName(), icon: app.getIcon()});
    });
  }
  onInit() {
    this.showMenu();
  }
  showMenu() {
    if(this.currentItem < 0) {
      this.currentItem = 0;
    }
    this.utils.clearScreen();
    var yPos = -25*this.currentItem;
    this.appsList.forEach((app, index) => {
      if(index == this.currentItem) this.tela.drawRect(0, 0, this.tela.getWidth()-1, 25);
      this.utils.drwStr(app.icon, 1, yPos+1);
      this.utils.drwStr(app.name, 24, yPos+1);
      yPos += 25;
    });
  }
  move(index) {
    this.currentItem+=Number(index);
    if(this.currentItem < 0) {
      this.currentItem = this.appsList.length - 1;
    } else if(this.currentItem > this.appsList.length - 1) {
      this.currentItem = 0;
    }
    this.showMenu();
  }
  openApp() {
    var app;
    if(this.currentItem < 0) {
      app = this.utils.loadApp("apjsclock");
    } else {
      app = this.utils.loadApp(this.appsList[this.currentItem].appName);
    }
    return app;
  }
  getName() {
    return 'Main';
  }
  onClickBtn35() {
    this.move(-1);
    return this;
  }
  onClickBtn0() {
    this.move(1);
    return this;
  }
  onClickBtn12() {
    return this.openApp();
  }
  onClickBtn21() {
    return this.openApp();
  }
  onClickBtn27() {
    return this.utils.lockClock();
  }
}
exports = mainChronvs
